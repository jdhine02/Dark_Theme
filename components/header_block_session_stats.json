{
    "Name": "headerBlock",
    "BlockType": "dock",
    "Orientation": "Horizontal",
    "Items": [
        //headerLeft
        {
            "Name": "headerLeftPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Spacing": 12,
            "Padding": "0, 0",
            "HorizontalAlignment": "Left",
            "Items": [

                //league name
                    {
                        
                            "BlockType": "text",
                            "Source": "{Season.LeagueInfo.LeagueName}",                            
                            "FontName": "{FontNameWide}",
                            "FontSize": 22,
                            "Foreground" : "{WhiteText}"
                    },
                    {                            
                            "BlockType": "text",
                            "Source": "{Season.Name}",
                            "VerticalAlignment" : "Center",
                            "FontName": "{FontNameWide}",
                            "FontSize": 22,
                            "Foreground" : "{WhiteText}"
                    },
                    {
                        "BlockType": "text",
                        "Source": "Race Stats",
                        "FontName": "{FontNameWide}",  
                        "Foreground" :"{WhiteText}",                                 
                        "FontSize": 20
                    },
                ]
            },
                
            
            //headerCenter
                {
                    "Name": "headerCenterPart",
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "Spacing": 12,
                    "Padding": "0, 0",
                    "HorizontalAlignment": "Center",
                    "Items": [
                        //TrackImage
                        
                            {
                            "BlockType" : "image",
                            "Height": 200,
                            "VerticalAlignment": "Top",
                            "ImageOptions": {
                                "Path": "images/tracks/track_{Session.Track.CircuitName}.png"
                            }
                        }
                    ]
                },

        //headerRight
        {
            "Name": "headerRightPart",
            "BlockType": "stack",
            "MarginLeft" : 56,
            "Orientation": "Vertical",
            "HorizontalAlignment": "Right",
            "Items": [
                {
                    "BlockType": "stack",
                    "Items": [
                        {
                            "BlockType": "stack",
                            "Orientation": "Vertical",
                            "Spacing": 8,
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Right",
                                    "Source": "[Round] {Season.SeasonCurrentNumberEvent} [of] {Season.SeasonOverallNumberEvents}",
                                    "FontName": "{FontNameWide}",
                                    "FontSize": 20,
                                    "Foreground" : "{WhiteText}"
                                },

                                {
                                    "BlockType": "stack",
                                    "HorizontalAlignment": "Right",
                                    "Items": [
                                        {
                                            "BlockType": "text",
                                            "Source": "[{Session.SessionType}]",
                                            "FontName": "{FontNameWide}",
                                            "FontSize": 20,
                                            "Foreground" : "{WhiteText}",

                                        },
                                        //race duration
                                        {
                                            "BlockType": "text",                                            
                                            "RenderIf": false,
                                            "Source": " • {Session.TotalLaps} [laps]",
                                            "FontName": "{FontNameWide}",
                                            "FontSize": 20,
                                            "Foreground" : "{WhiteText}",
                                            "Triggers" : 
                                            [
                                                {
                                                    "Condition" : "{Session.IsLiveData}",
                                                    "ConditionAnd" : "{Session.SessionType, Converter=StringEquals, Parameter=Race}",
                                                    "Property" : "RenderIf",
                                                    "Value" : true
                                                }
                                            ]
                                        },
                                        //qual, practice duration
                                        {
                                            "BlockType": "text",                                                                                  
                                            "RenderIf": false,
                                            "Source": " • {Session.SessionDurationMinutes} [min].",
                                            "FontName": "{FontNameWide}",
                                            "FontSize": 20,
                                            "Foreground" : "{WhiteText}",
                                            "Triggers" : 
                                            [
                                                {
                                                    "Condition" : "{Session.IsLiveData}",
                                                    "ConditionAnd" : "{Session.SessionType, Converter=StringNotEquals, Parameter=Race}",
                                                    "Property" : "RenderIf",
                                                    "Value" : true
                                                }
                                            ]
                                        }
                                    ]
                                },
                                    
                                        //session
                                        {
                                            "Name": "headerSessionLine",
                                            "BlockType": "stack",
                                            "VerticalAlignment": "Center",
                                            "HorizontalAlignment" :"Right",
                                            "Spacing": 8,
                                            "Items": [
                                            

                                                {
                                                    "Name": "CountryName",
                                                    "BlockType": "text",
                                                    "MarginLeft": 0,
                                                    "VerticalAlignment": "Center",
                                                    "Source": "{Session.Track.CountryName}",
                                                    "FontName": "{FontNameWide}",
                                                    "FontSize": 22,
                                                    "Foreground" : "{WhiteText}",
                                                },
                                                {
                                                    "Name": "CountryFlag",
                                                    "BlockType": "image",
                                                    "VerticalAlignment": "Center",
                                                    "Height": 48,
                                                    "Source": "{Session.Track.Nation.LogoPath}"
                                                },
                                            ]
                                        },
                                //                {
                                //                    "Name": "LocationName",
                                //                    "BlockType": "text",
                                //                    //"MarginLeft": 12,
                                //                    //"MarginTop": 2,
                                //                    "VerticalAlignment": "Center",
                                //                    "Source": "{Session.Track.CircuitFullName}",
                                //                    "FontName": "{FontNameWide}",                            
                                //                    "FontSize": 20,
                                //                    "Foreground" : "{WhiteText}"
                                //                },
                                                    ]
                                                },

                        {
                            "Name": "leagueLogo",
                            "BlockType": "image",
                            "Height": 82,
                            "MarginLeft": 36,
                            "Source": "{Season.LeagueInfo.LeagueLogo}"
                        }
                    ]
                }
            ]
        }
    ]
}