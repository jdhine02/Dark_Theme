{
    "BlockType": "text",
    "Source": "<position>",
    "Width": 65,
    "Height": 68,
    "BackgroundImage": "position_bg.png",
    "FontName": "{FontNameDefault}",
    "FontSize": 40,
    "Foreground": "WhiteText",
    "TextOptions": {
        "HorizontalAlignment": "Center"    
    },
    "Triggers" : [ 
        {
            "Condition" : "{RenderP1Colors}",
            "ConditionAND": "{Item.Position, Converter=NumberEquals, Parameter=1}",
            "Setters" :
            [
                {
                    "Property" : "Foreground",
                    "Value" : "{P1Foreground}"
                }
            ]
        },
        {
            "Condition" : "{RenderP2}",
            "ConditionAND" : "{Item.Position, Converter=NumberEquals, Parameter=2}",
            "Setters" :
            [
                {
                    "Property" : "Foreground",
                    "Value" : "{P2Foreground}"
                }
            ]
            
        },
        {
            "Condition" : "{RenderP3Colors}",
            "ConditionAND" : "{Item.Position, Converter=NumberEquals, Parameter=3}",
            "Setters" :
            [
                {
                    "Property" : "Foreground",
                    "Value" : "{P3Foreground}"
                }
            ]
        },
        {
            "Condition" : "{RenderDNFTex}",
            "ConditionAND" : "{Item.IntervalRace, Converter=StringEquals, Parameter=DNF}",
            "Setters" :
            [
                {
                    "Property" : "Foreground",
                    "Value" : "{DNFText}"
                }
            ],
        },
        
    ],

   
}